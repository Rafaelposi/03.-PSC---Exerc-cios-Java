import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("Escolha uma estação do ano:");
        System.out.println("1 - Primavera");
        System.out.println("2 - Verão");
        System.out.println("3 - Outono");
        System.out.println("4 - Inverno");
        
        int escolha = scanner.nextInt();
        
        switch (escolha) {
            case 1:
                System.out.println("Primavera: Florescimento das flores.");
                break;
            case 2:
                System.out.println("Verão: Tempo quente e dias longos.");
                break;
            case 3:
                System.out.println("Outono: Folhas caem das árvores.");
                break;
            case 4:
                System.out.println("Inverno: Tempo frio e possível neve.");
                break;
            default:
                System.out.println("Escolha inválida.");
        }
        
        scanner.close();
    }
}
